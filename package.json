{
  "name": "ongi-express",
  "version": "1.0.0",
  "description": "Express.js backend server for ongi service",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && tsc-alias && cp -r src/generated dist/",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "dev:watch": "nodemon --exec ts-node -r tsconfig-paths/register --files src/app.ts",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donggyushin/ongi-express.git"
  },
  "keywords": [
    "express",
    "ongi",
    "backend",
    "api",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/donggyushin/ongi-express/issues"
  },
  "homepage": "https://github.com/donggyushin/ongi-express#readme",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "prisma": "^6.14.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
